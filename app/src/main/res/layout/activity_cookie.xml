<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="appcampsiberia.fortunecookies.CookieActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView9"
        android:src="@drawable/ghbdtn"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="53dp"
        android:padding="16dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:text="Выбери свою печеньку..."
                android:id="@+id/textView5"
                android:textSize="35sp"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:id="@+id/cookie1"
                android:layout_weight="1"
                android:src="@drawable/gingerman_162141_960_720" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:id="@+id/cookie2"
                android:src="@drawable/oreo"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:id="@+id/imageView7"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:id="@+id/imageView12"
                android:layout_weight="1" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:id="@+id/cookie3"
                    android:layout_weight="1"
                    android:src="@drawable/russiancookies" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:id="@+id/cookie4"
                    android:layout_weight="1"
                    android:src="@drawable/echen4" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:id="@+id/cookie5"
                android:layout_weight="1"
                android:src="@drawable/image" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:id="@+id/cookie6"
                android:src="@drawable/fortunecookie1092374"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
