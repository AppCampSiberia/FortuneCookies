<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="appcampsiberia.fortunecookies.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:src="@drawable/shokoladniy_pechen"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:padding="16dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="110dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView5"
                    android:src="@drawable/logo"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginTop="100dp">

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Узнай"
                    android:id="@+id/textView"
                    android:textSize="50sp"
                    android:textColor="#fe0bb9"
                    android:typeface="serif"
                    android:textIsSelectable="false"
                    android:textStyle="bold|italic"
                    android:layout_gravity="top"
                    android:gravity="fill_horizontal|center|right"
                    android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="свою"
                android:id="@+id/textView6"
                android:textSize="50dp"
                android:textStyle="bold|italic"
                android:textColor="#f935e8"
                android:gravity="center_vertical|fill_vertical|center_horizontal"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="судьбу"
                android:id="@+id/textView7"
                android:textSize="60sp"
                android:textStyle="italic"
                android:textColor="#dd1dff"
                android:layout_gravity="right"
                android:gravity="right" />
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="НАЧАТЬ"
            android:id="@+id/buttonBegin"
            android:layout_weight="1"
            android:textSize="30sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="About"
            android:id="@+id/button2"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:textSize="20dp" />

    </LinearLayout>

</RelativeLayout>
